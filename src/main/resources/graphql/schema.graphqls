type Query{}

type Mutation{
    login(username: String!, password: String!): LoginResponse

}

interface Paginated{
    page: Int
    pageSize: Int
    total: Int
    totalPages: Int
    isFirstPage: Boolean
    isLastPage: Boolean
    sort: Sort
}

type Sort {
    empty: String
    sorted: Boolean
}

input SortInput {
    field: String!
    direction: SortDirection = ASC
}

enum SortDirection {
    ASC
    DESC
}

type LoginResponse{
    token: String
    user: User
}