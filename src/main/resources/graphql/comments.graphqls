extend type Query {
    comments(page: Pageable): PaginatedComment
    commentById(id:ID!): Comment
}

extend type Mutation {
    createComment(input: CommentInput!): Comment
    updateComment(id: ID!, body: String!): Comment
    deleteComment(id: ID!): String
}

type Comment{
    id:ID
    post: Post
    user: User
    body: String
    parent: Comment
    createdAt: String
    updatedAt: String
    deletedAt: String
    isDeleted: Boolean
}

type PaginatedComment implements Paginated{
    items:[Comment]
    page: Int
    pageSize: Int
    total: Int
    totalPages: Int
    isFirstPage: Boolean
    isLastPage: Boolean
    sort: Sort
}

input CommentInput {
    postId: ID!
    userId: ID!
    body: String!
    parentCommentId: ID
}
